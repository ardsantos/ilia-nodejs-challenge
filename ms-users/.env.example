# Local Development Environment for ms-users
# Copy this file to .env and adjust values as needed

# Database connection (use localhost when running service locally with Docker databases)
# Port 5432 connects to the postgres-users container from docker-compose.yml
DATABASE_URL=postgresql://user_usr:your_users_db_password@localhost:5432/users_db

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_SECRET_INTERNAL=dev_internal_jwt_secret_change_in_production

# Wallet service URL (use localhost when running ms-wallet locally)
WALLET_SERVICE_URL=http://localhost:3001

# Service port
PORT=3002
